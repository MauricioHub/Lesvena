<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="64dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.nvm.lesvena.VisualizeFragment">


    <ImageView
        android:id="@+id/imgdetail"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:srcCompat="@drawable/common_full_open_on_phone" />
    <!--   android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="177dp" -->



    <android.support.design.widget.TextInputLayout
        android:id="@+id/ComunCover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgdetail" >

        <EditText
            android:id="@+id/et1_comun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:editable="false"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/cientificoCoverCover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ComunCover" >

        <EditText
            android:id="@+id/et2_cientifico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:editable="false"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/descripcionCoverCover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cientificoCoverCover" >

        <EditText
            android:id="@+id/et3_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:editable="false"/>

    </android.support.design.widget.TextInputLayout>


</RelativeLayout>
